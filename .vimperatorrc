" copy.js {{{
js<<EOM
liberator.globalVariables.copy_templates = [{
  label: 'Tabslist',
  value: 'Current tabs copy to <UL> list',
  custom: function() {
            let result = <ul/>;
            for each ([,tab] in tabs.browsers)
                result.li += <li>
  <a href={tab.currentURI.spec}>
  {tab.contentTitle}</a>
</li>;
            return result;
          }
}];
EOM
