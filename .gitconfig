# vim:set noet:

[github]
	user = tyru
	# My github token here!
[core]
	excludesfile = ~/.gitignore.base
[user]
	name = tyru
	email = tyru.exe@gmail.com
[alias]
	ar = archive
	br = branch
	ci = commit -v
	cia = commit -v --all
	ciam = commit -v --amend
	co = checkout
	zip = archive --format=zip
	cont = rebase --continue
	cp = cherry-pick
	df = diff
	dish = diff --cached
	ds = diff --cached
	los = log --stat
	lg = log --graph
	lp = log -p
	ls = ls-files
	pull-all = pull --rebase --tags
	push-all = push --tags
	re = reset
	reha = reset --hard
	rl = reflog
	rmsh = rm --cached
	s = show
	sa = stash apply
	sd = stash drop
	sl = stash list
	sp = stash pop
	ss = stash save
	st = status
	sub = submodule
	view = log --pretty=oneline --abbrev-commit --graph --source --tags --branches
	wh = whatchanged
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	ui = auto
[rerere]
	enabled = true
