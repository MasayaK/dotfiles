# vim:set noet:

[github]
	user = tyru
	# My github token here!
[core]
	excludesfile = ~/.gitignore.base
	editor = vim
[user]
	name = tyru
	email = tyru.exe@gmail.com
[alias]
	ar = archive
	br = branch
	ci = commit -v
	cia = commit -v --all
	ciam = commit -v --amend
	co = checkout
	cont = rebase --continue
	cp = cherry-pick
	di = diff --color-words -M
	dish = diff --cached -M
	fixup = commit --amend -C HEAD
	gene = log --graph --pretty='%C(yellow)%h%Creset %ai %an: %s%C(yellow)%d%Creset' --all
	l = log --stat
	last = log -p --reverse HEAD@{1}..
	lp = log -p
	ls = ls-files
	re = reset
	reha = reset --hard
	rmsh = rm --cached
	s = show
	sa = stash apply
	sd = stash drop
	sl = stash list
	sp = stash pop
	ss = stash save
	st = status
	sub = submodule
	subfor = submodule foreach
	subinit = submodule update --init
	subadd = submodule add
	view = log --pretty=oneline --abbrev-commit --graph --source --tags --branches
	wh = whatchanged
	zip = archive --format=zip
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	ui = auto
[rerere]
	enabled = true
