#include <iostream>
#include <cstdlib>
#include <vector>
#include <algorithm>


const int MAX_COUNT = 100;
typedef std::vector<int>    IntVec;


void
show(const std::ostream& out, IntVec& vec) {
    out << "----------------------------------------------" << std::endl;
    for (IntVec::iterator it = vec.begin(); it != vec.end(); ++it)
        out << *it << std::endl;
    out << "----------------------------------------------" << std::endl;
}

int
main(int argc, char *argv[]) {

    IntVec   vec;

    vec.reserve(MAX_COUNT);
    for (int i = 0; i < MAX_COUNT; i++)
        vec.push_back(i);
    random_shuffle(vec.begin(), vec.end());

    show(std::cout, vec);

    std::sort(vec.begin(), vec.end());

    show(std::cout, vec);



    return EXIT_SUCCESS;
}


