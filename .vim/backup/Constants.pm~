package MyScheme::Atom::Constants;

use strict;
use warnings;
use Carp;

use version;
our $VERSION = qv('0.0.0');

my %const;
BEGIN {
    %const = (
        SCM_UNDEF => 1,
        SCM_LIST => 2,
        SCM_NUMERIC => 3,
        SCM_BOOLEAN => 4,
        SCM_STRING => 5,
        SCM_FUNC => 6,
        SCM_KEYWORD => 7,
        SCM_SYMBOL => 8,
    );
}


use constant \%const;

use base qw(Exporter);
our @EXPORT = keys %const;



1;
__END__


=head1 SYNOPSIS

    use MyScheme::Atom::Constants;
  
  
=head1 DESCRIPTION

export SCM_* constants.


=head1 DEPENDENCIES

None.


=head1 BUGS

    No known bugs.


