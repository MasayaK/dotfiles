import java.io.*;

class Reidai2 {
    public static void main(String args[]) {
        for (int posX = 0; posX <= 7; posX++) {
            System.out.print('\r');
            // 空白を表示
            for (int i = 0; i < posX; i++) {
                System.out.print(' ');
            }
            // ボールを表示
            System.out.print('o');

            try {
                Thread.sleep(200);
            } catch (Exception e) {
                break;
            }
        }
    }
}

