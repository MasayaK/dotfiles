#include <iostream>
#include <vector>
#include <fstream>
#include <cstdlib>


typedef std::vector<std::string>    FileLines;




int
main(int argc, char *argv[]) {

    FileLines lines;
    std::ifstream file("hoge.txt");

    assert(file.is_open());

    std::cout << "---------------------------------" << std::endl;
    std::string buf;
    while (getline(file, buf)) {
        if (buf.size() == 0) break;
        std::cerr << "[" << buf << "]" << std::endl;
        lines.push_back(buf);
    }
    std::cout << "---------------------------------" << std::endl;


    std::cout << "---------------------------------" << std::endl;
    typedef std::vector<std::string>::iterator Iter;
    for(Iter it = lines.begin(); it != lines.end(); ++it) {
        std::cout << *it << std::endl;
    }
    std::cout << "[EOL]" << std::endl;
    std::cout << "---------------------------------" << std::endl;


    return EXIT_SUCCESS;
}


