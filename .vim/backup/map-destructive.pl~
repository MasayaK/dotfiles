#!/usr/bin/env perl
use strict;
use warnings;
use utf8;


local $\ = "\n";
my @a = qw(foo bar baz);

print "--------------------------";
print join "\n", map { s/(.*)/ucfirst $1/e; $_ } @a;
print '@a:' . join ' ', @a;    # @a is Foo Bar Baz


print "--------------------------";
use List::MoreUtils qw(apply);
print join "\n", apply { s/(.*)/ucfirst $1/e } @a;
