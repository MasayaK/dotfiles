@echo off

if "%1" == "" (
    echo Usage: %0 [exec dir]

) else if exist %1\Main.java (
    cd %1
    if exist Main.class del Main.class

    rem ### compile
    echo compiling...
    javac Main.java

    rem ### execute
    if exist Main.class (
        echo.
        echo compiling has done. press enter to exec...
        pause >nul
        java Main %2 %3 %4 %5 %6 %7 %8 %9
    )
    cd ..

) else (
    echo %1\Main.java: No such a file
)
