#!/usr/bin/env perl
use strict;
use warnings;


open my $FH, "file.txt" or die $!;

my %food;
while (<$FH>) {
    chomp $_;
    my ($name, $group) = split / /, $_;
    push @{$food{$name}}, $group;
}

foreach my $name (sort keys %food) {
    my @group = @{$food{$name}};
    print "${name}ÅF" . (join ' ', @group) . "\n";
}

