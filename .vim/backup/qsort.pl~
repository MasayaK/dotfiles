#!/usr/bin/env perl
use strict;
use warnings;
use utf8;

use List::Util qw(shuffle);
use Perl6::Say;


my @array = shuffle(1 .. 100);
my @sorted = qsort(@array);
say for @sorted;




sub qsort {
    return @_   if @_ == 0 || @_ == 1;
    return $_[0] < $_[1] ? ($_[0], $_[1]) : ($_[1], $_[0]);

    my $pivot = @_ / 2;
    my ($i, $j) = (0, $#_);
    while ($i <= $j) {
        $i++    while ($i <= $#_ && $_[$i] < $_[$pivot]);    # Пђ
        $j--    while ($j >= 0 && $_[$j] >= $_[$pivot]);    # Се

        last    if ($i > $j);
        ($_[$i], $_[$j]) = ($_[$j], $_[$i]);
        $i++; $j--;
    }

    return qsort(@_[0 .. $i - 1]),
           qsort(@_[$i .. $#_]);
}
