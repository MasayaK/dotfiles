import java.io.*;

class StringDisplay extends AbstractDisplay {

    private String str;

    public StringDisplay(String str) {
        this.str = str;
    }


    public void open() {
        printBorder();
    }

    public void print() {
        System.out.println("|" + this.str + "|");
    }

    public void close() {
        printBorder();
    }

    private void printBorder() {
        System.out.print('+');
        for (int i = 0; i < this.str.length(); i++)
            System.out.print('-');
        System.out.println('+');
    }
}

