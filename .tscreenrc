escape ^Jj

autodetach on
# bell_msg "^G"
startup_message off

encoding utf-8
defencoding utf-8
defkanji utf-8

# bind ^E encoding euc
# bind ^U encoding utf-8


# idle 600
# blanker
# blankerprg /usr/bin/fortune -s

caption always "%{= wb} %-w%{=bu dr}%n %t%{-}%+w %= %{=b wk} [%l] %{=b wb}%y/%m/%d(%D) %{=b wm}%c"
bind a  caption splitonly
bind ^A caption always

deflogin off
defscrollback 10000

shell -$SHELL
term xterm-color
vbell off

# support 256 color (via http://vim-users.jp/2009/08/hack64/)
attrcolor b ".I"
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
defbce on

bind ^O title
bind ^K copy
bind ^L windowlist
bind h prev
bind l next


# more options:
#   http://www.linux.or.jp/JM/html/GNU_screen/man1/screen.1.html
